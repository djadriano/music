<section class="artists">
  <p class="loading" ng-show="artistsInfo.length == 0">loading artist info...</p>
  <header class="artists-header boxes horizontal modules">
    <figure>
      <img ng-src="{{artists.infos.photo}}" alt="{{artists.infos.name}}">
      <figcaption>
        <h1 class="title-1">{{artists.infos.name}}</h1>
        <%= partial "modules/artists/menu" %>
      </figcaption>
    </figure>
  </header>
  <div class="artists-content modules">
    <p ng-bind-html="artistsInfo.bio.content">{{artistsInfo.bio.content}}</p>
  </div>
  <div class="modules">
    <h1 class="title-1">Related Artists</h1>
    <ul class="boxes-list">
      <li ng-repeat="item in artistsInfo.similar.artist" class="boxes vertical">
        <figure>
          <a ng-href="/#/artists/{{item.name | beautyUrlParam}}"><img ng-src="{{item.image[3]['#text']}}"></a>
          <figcaption>
            {{item.name}}
          </figcaption>
        </figure>
      </li>
    </ul>
  </div>
</section>